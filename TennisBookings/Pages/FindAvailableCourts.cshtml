@page
@model FindAvailableCourtsModel
@{
    ViewData["Title"] = "Find Available Courts";
}

<div class="text-center mb-5">
    <span class="display-3">üîç</span>
    <h1 class="section-title text-gradient mt-3 d-inline-block">Find Available Courts</h1>
    <p class="lead text-muted">Select a date to view court availability</p>
</div>

<div class="row justify-content-center mb-5">
    <div class="col-lg-8">
        <div class="modern-card">
            <form method="POST">
                <div class="row align-items-end g-3">
                    <div class="col-md-8">
                        <label asp-for="SearchDate" class="control-label fs-5 mb-3">
                            <strong>Select Date</strong>
                        </label>
                        <input asp-for="SearchDate" type="date" class="form-control form-control-lg" />
                        <div class="form-text mt-2">Choose a date to check court availability</div>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <strong>Search Courts</strong>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model.HasNoAvailability)
{
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="modern-card text-center py-5">
                <span class="display-1 mb-4 d-block">üòî</span>
                <h3 class="mb-3">No Availability</h3>
                <p class="text-muted mb-4">Sorry, there is no court availability on this date. Please try another date.</p>
                <button type="button" class="btn btn-primary" onclick="window.location.reload();">
                    Try Another Date
                </button>
            </div>
        </div>
    </div>
}
else if (Model.Availability?.Any() ?? false)
{
    <div class="row">
        <div class="col-12">
            <div class="modern-card">
                <h3 class="fw-bold mb-4 text-gradient">Court Availability</h3>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="fw-bold fs-5" style="width: 150px;">Time</th>
                                @foreach (var court in Model.Availability.First().CourtAvailability)
                                {
                                    <th class="text-center fw-bold fs-5">
                                        <div class="d-flex flex-column align-items-center">
                                            <span>üéæ</span>
                                            <span>Court @court.CourtId</span>
                                        </div>
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hour in Model.Availability)
                            {
                                <tr>
                                    <td class="fw-semibold fs-6 align-middle">
                                        <span class="badge bg-light text-dark fs-6 py-2 px-3">@hour.HourText</span>
                                    </td>
                                    @foreach (var court in hour.CourtAvailability)
                                    {
                                        <td class="text-center align-middle">
                                            @if (court.Available)
                                            {
                                                <a asp-page="/BookCourt" 
                                                   asp-route-Courtid=@court.CourtId 
                                                   asp-route-BookingStartTime=@hour.BookingStartDate 
                                                   class="btn btn-success btn-lg fw-semibold px-4">
                                                    Book Now
                                                </a>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-danger btn-lg fw-semibold px-4" disabled>
                                                    Unavailable
                                                </button>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-4 p-4 rounded-3" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);">
                    <div class="d-flex align-items-center">
                        <span class="fs-4 me-3">üí°</span>
                        <div>
                            <strong style="color: #92400e;">Tip:</strong>
                            <span style="color: #78350f;"> Click "Book Now" to reserve your preferred time slot.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}