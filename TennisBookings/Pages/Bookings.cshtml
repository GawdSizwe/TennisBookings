@page
@model BookingsModel
@{
    ViewData["Title"] = "Your Bookings";
}

<div class="text-center mb-5">
    <h1 class="section-title text-gradient d-inline-block">Your Reservations</h1>
    <p class="lead" style="color: #2d3748;">@Model.Greeting</p>
</div>

@if (Model.BookingSuccess)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-success d-flex align-items-center">
                <strong>Your reservation has been confirmed successfully</strong>
            </div>
        </div>
    </div>
}

@if (!Model.CourtBookings.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="modern-card text-center py-5">
                <h3 class="mb-4" style="color: #2F1757; letter-spacing: 0.05em;">No Current Reservations</h3>
                <p class="mb-5" style="color: #2d3748;">You currently have no court reservations scheduled.</p>
                <a asp-page="FindAvailableCourts" class="btn btn-primary btn-lg">Reserve Court</a>
            </div>
        </div>
    </div>
}
else
{
    @foreach (var date in Model.CourtBookings)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="modern-card">
                    <h3 class="fw-bold mb-4 pb-3 border-bottom">
                        <span class="text-gradient">@date.Key.ToString("D")</span>
                    </h3>
                    <div class="row g-3">
                        @foreach (var booking in date)
                        {
                            <div class="col-md-6">
                                <div class="p-4 rounded-1" style="background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%); border-left: 3px solid #006633;">
                                    <div class="mb-3">
                                        <h5 class="fw-bold mb-0" style="color: #2F1757; letter-spacing: 0.08em; text-transform: uppercase; font-size: 1rem;">Court @booking.CourtId</h5>
                                    </div>
                                    <div style="color: #2d3748;">
                                        <span class="fw-semibold" style="font-family: 'Inter', sans-serif; font-size: 0.95rem;">@booking.StartDateTime.Hour.To12HourClockString() â€” @booking.EndDateTime.Hour.To12HourClockString()</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    
    <div class="row">
        <div class="col-12 text-center">
            <a asp-page="FindAvailableCourts" class="btn btn-primary btn-lg">Reserve Additional Court</a>
        </div>
    </div>
}