@page "{courtId}"
@model BookCourtModel
@{
    ViewData["Title"] = "Book Court";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="modern-card">
            <div class="text-center mb-4">
                <span class="display-1">üéæ</span>
                <h2 class="section-title text-gradient mt-3">Book Your Court</h2>
                <p class="text-muted">Select your booking duration and confirm your reservation</p>
            </div>

            @if (Model.Errors?.Any() ?? false)
            {
                <div class="alert alert-danger d-flex align-items-start mb-4">
                    <div class="me-3 fs-4">‚ö†Ô∏è</div>
                    <div>
                        <p class="fw-bold mb-2">Unable to complete booking!</p>
                        <ul class="mb-0 ps-3">
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <form method="POST">
                <div class="mb-4">
                    <label asp-for="BookingLengthInHours" class="control-label fs-5 mb-3">
                        <strong>Booking Duration</strong>
                    </label>
                    <select asp-for="BookingLengthInHours" class="form-select form-select-lg"
                            asp-items="@Model.PossibleHourLengths">
                        <option value="">-- Select Booking Length --</option>
                    </select>
                    <div class="form-text mt-2">Choose how long you'd like to reserve the court</div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg py-3">
                        <strong>Confirm Booking</strong>
                    </button>
                    <a asp-page="FindAvailableCourts" class="btn btn-outline-secondary">
                        Back to Available Courts
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
