@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Tennis by the Ocean";
}

<!-- Hero Section -->
<div class="hero-section text-center mb-5">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">TENNIS BY THE OCEAN</h1>
        @if (Model.ShowGreeting)
        {
            <h3 class="mb-4" style="color: @Model.GreetingColour">@Model.Greeting</h3>
        }
        <p class="lead mb-5">Championship Excellence on South Africa's Coastal Gem</p>
        <div class="d-flex gap-4 justify-content-center flex-wrap">
            <a class="btn btn-light btn-lg px-5 py-3" asp-page="FindAvailableCourts">Reserve Court</a>
            <a class="btn btn-outline-light btn-lg px-5 py-3" asp-page="Contact">Enquire</a>
        </div>
    </div>
</div>

@if (User?.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-center justify-content-between">
                <span><strong>Admin Access:</strong> You have administrative privileges</span>
                <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Home" asp-action="Index">Go to Admin Dashboard</a>
            </div>
        </div>
    </div>
}

@if (Model.ShowWeatherForecast)
{
    <div class="row mb-5">
        <div class="col-12">
            <div class="modern-card" style="background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); border-left: 4px solid #3b82f6;">
                <h4 class="fw-bold mb-3" style="color: #1e40af;">@Model.ForecastSectionTitle</h4>
                <p class="mb-0" style="color: #1e3a8a; font-size: 1.1rem;">@Model.WeatherDescription</p>
            </div>
        </div>
    </div>
}

<!-- About Section -->
<div class="row mb-5">
    <div class="col-12">
        <div class="modern-card">
            <h2 class="section-title">Heritage & Excellence</h2>
            <p class="fs-5 mb-4">
                Positioned along South Africa's spectacular Indian Ocean coastline between Durban and Cape Town, our establishment 
                represents the pinnacle of tennis refinement. We cultivate an environment where tradition meets contemporary excellence, 
                welcoming players who appreciate the art of the game and the pursuit of mastery.
            </p>
            <p class="fs-5">
                Our facilities feature three championship-caliber grass courts, complemented by climate-controlled indoor courts 
                for year-round excellence. The clubhouse offers premium amenities including private changing facilities and 
                executive lounges, designed for the discerning athlete.
            </p>
        </div>
    </div>
</div>

<!-- Membership Invitation Section -->
<div class="row mb-5">
    <div class="col-12">
        <div class="modern-card" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-left: 3px solid #006633;">
            <h3 class="fw-bold mb-3" style="color: #2F1757;">Experience Distinguished Membership</h3>
            <p class="fs-5 mb-0" style="color: #2d3748;">
                We extend an invitation to prospective members to experience our facilities firsthand through a complimentary 
                trial visit. Membership commences at <strong>R1,000 monthly</strong>, inclusive of personalized instruction 
                with our resident professional.
            </p>
        </div>
    </div>
</div>

<!-- Membership Products -->
<h2 class="section-title text-center mb-5">Membership Tiers</h2>
<div class="row g-4 mb-5">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-4 col-md-6">
            <div class="product-card text-center">
                <h4 class="fw-bold mb-4" style="letter-spacing: 0.1em; text-transform: uppercase; font-size: 1.25rem; color: #2F1757;">@product.Name</h4>
                <p class="mb-5" style="color: #2d3748; min-height: 3rem;">@product.Description</p>
                <div class="mb-5">
                    <span class="display-5 fw-bold text-gradient">@product.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</span>
                    <span class="d-block mt-2" style="color: #2d3748; font-size: 0.85rem; letter-spacing: 0.1em; text-transform: uppercase;">Monthly</span>
                </div>
                <a class="btn btn-primary w-100" asp-page="FindAvailableCourts">Reserve</a>
            </div>
        </div>
    }
</div>