@model MaintenanceListerViewModel
@{
    ViewData["Title"] = "Upcoming Court Maintenance";
}

<div class="container">
    <div class="text-center mb-5">
        <span class="display-3">üîß</span>
        <h1 class="section-title text-gradient mt-3 d-inline-block">Upcoming Court Maintenance</h1>
        <p class="lead text-muted">Scheduled maintenance work for courts</p>
    </div>

    @if (!(Model?.ScheduledMaintenanceWork?.Any() ?? false))
    {
        <div class="row">
            <div class="col-12">
                <div class="modern-card text-center py-5">
                    <span class="display-1 mb-4 d-block">‚ú®</span>
                    <h3 class="mb-3">No Scheduled Maintenance</h3>
                    <p class="text-muted">There is no upcoming maintenance work scheduled.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        @foreach (var date in Model!.ScheduledMaintenanceWork!)
        {
            <div class="row mb-5">
                <div class="col-12">
                    <div class="modern-card">
                        <h3 class="fw-bold mb-4 pb-3 border-bottom">
                            <span class="text-gradient">@date.Key.ToString("D")</span>
                        </h3>
                        <div class="row g-4">
                            @foreach (var maintenanceWork in date)
                            {
                                <div class="col-lg-6">
                                    @if (maintenanceWork.CourtIsClosed)
                                    {
                                        <div class="p-4 rounded-3 h-100" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-left: 4px solid #f59e0b;">
                                            <div class="mb-3">
                                                <span class="badge bg-warning text-dark px-3 py-2 mb-3 fs-6">
                                                    <strong>‚ö†Ô∏è COURT CLOSED</strong>
                                                </span>
                                                <div class="d-flex align-items-center mb-2">
                                                    <span class="fs-4 me-2">üîß</span>
                                                    <h5 class="fw-bold mb-0" style="color: #92400e;">@maintenanceWork.CourtName</h5>
                                                </div>
                                                <div class="d-flex align-items-center text-muted mb-2">
                                                    <span class="me-2">‚è∞</span>
                                                    <span class="fw-semibold">@maintenanceWork.StartDateTime.Hour.To12HourClockString() - @maintenanceWork.EndDateTime.Hour.To12HourClockString()</span>
                                                </div>
                                                <div class="mt-3">
                                                    <span class="fw-semibold" style="color: #78350f;">@maintenanceWork.Title</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="p-4 rounded-3 h-100" style="background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%); border-left: 4px solid #10b981;">
                                            <div class="mb-3">
                                                <span class="badge bg-success px-3 py-2 mb-3 fs-6">
                                                    <strong>‚úÖ COURT OPEN</strong>
                                                </span>
                                                <div class="d-flex align-items-center mb-2">
                                                    <span class="fs-4 me-2">üîß</span>
                                                    <h5 class="fw-bold mb-0" style="color: #065f46;">@maintenanceWork.CourtName</h5>
                                                </div>
                                                <div class="d-flex align-items-center text-muted mb-2">
                                                    <span class="me-2">‚è∞</span>
                                                    <span class="fw-semibold">@maintenanceWork.StartDateTime.Hour.To12HourClockString() - @maintenanceWork.EndDateTime.Hour.To12HourClockString()</span>
                                                </div>
                                                <div class="mt-3">
                                                    <span class="fw-semibold" style="color: #047857;">@maintenanceWork.Title</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>